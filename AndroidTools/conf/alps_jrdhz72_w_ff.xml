<?xml version="1.0" encoding="UTF-8"?>

<!--  Firefox OS Alcatel PIXI configuration file   -->
<!--   Screen resolution 320x480   -->
<Android-config>
  <CanalPattern>
    <Pattern canal="keyboard" value="mtk-kpd"/>
    <Pattern canal="touchscreen" value="mtk-tpd"/>
  </CanalPattern>
  <KeyMapping canal="keyboard">
      <Key name="ON_OFF" code="116"/>
      <Key name="VOLUME_UP" code="115"/>
    <Key name="VOLUME_DOWN" code="114"/>
  </KeyMapping>
  <SoftKeyMapping>
      <Key name="HOME" avgX="159" avgY="510" />
  </SoftKeyMapping>
  <Touchscreen>
    <Pattern name="X" value="3 53 "/>
    <Pattern name="Y" value="3 54 "/>
    <Pattern name="ratio" value="1.0"/>
    <Pattern name="down" value="3 48 1"/>
    <Pattern name="up" value="1 330 0"/>
    <Pattern name="downmax" value="3 48 256"/>
    <Pattern name="flush" value="0 0 0"/>
    <Pattern name="flush2" value="0 2 0"/>
    <Threshold name="move" value="15"/>
    <Option name="sendMouseDownForMove" value="true"/>
    <Option name="sendMouseEventFirst" value="true"/>
    <Option name="dontUseMonkey" value="true" />
  </Touchscreen>
</Android-config>
